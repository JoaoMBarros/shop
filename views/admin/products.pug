extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://img.freepik.com/fotos-gratis/biblia-sagrada-com-raios-de-luz-saindo-de-ia-generativa_123827-23906.jpg?size=626&ext=jpg&ga=GA1.1.1395880969.1709769600&semt=sph", alt="A Book")
                        .card__content
                            h2.product__price 1 real
                            p.product__description livro
                        .card__actions
                            a.btn(href="/admin/edit-product") Edit
                            form(action="/admin/delete-product" method="POST")
                                button.btn(type="submit") Delete
        else
            h2 No products found.